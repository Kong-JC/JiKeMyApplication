<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jikexueyuan.meituangrid.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:columnCount="5">
        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:src="@drawable/ic_category_food"
                android:layout_width="48dp"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="美食"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:src="@drawable/ic_category_film"
                android:layout_width="48dp"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="猫眼电影"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:src="@drawable/ic_category_hotel"
                android:layout_width="48dp"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="酒店住宿"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:src="@drawable/ic_category_entertainment"
                android:layout_width="48dp"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="休闲娱乐"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:src="@drawable/ic_category_takeout"
                android:layout_width="48dp"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="美团外卖"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:src="@drawable/ic_category_ticket"
                android:layout_width="48dp"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="机票/火车票"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:src="@drawable/ic_category_ktv"
                android:layout_width="48dp"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="KTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:src="@drawable/ic_category_go_out"
                android:layout_width="48dp"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="周边游"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:src="@drawable/ic_category_beauty"
                android:layout_width="48dp"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="丽人/丽发"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:src="@drawable/ic_category_travel"
                android:layout_width="48dp"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="旅游出行"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="#000"/>
        </LinearLayout>
    </GridLayout>
</LinearLayout>
